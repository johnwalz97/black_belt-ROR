<h1>All Products</h1>
<table class="table">
    <thead>
        <th>Product</th>
        <th>Seller</th>
        <th>Date Posted</th>
        <th>Amount</th>
        <th>Action</th>
    </thead>
    <tbody>
        <% @shoes.each do |shoe| %>
            <% if shoe.status == nil %>
                <tr>
                    <td><%= shoe.name %></td>
                    <td><%= shoe.user.name %></td>
                    <td><%= shoe.created_at.strftime("%B %d, %Y") %></td>
                    <td>$<%= shoe.price %></td>
                    <td>
                        <form action="/shoe/buy" method="post">
                            <input name="utf8" type="hidden" value="âœ“">
                            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
                            <input type="hidden" name="id" value="<%= shoe.id %>">
                            <input class="btn btn-success" type="submit" value="Buy">
                        </form>
                    </td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>